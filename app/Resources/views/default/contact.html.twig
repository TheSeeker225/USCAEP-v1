{% extends 'base.html.twig' %}

{% block title %}Nos contacts{% endblock %}

{% block body %}
<!-- Page Content -->
<div class="container-fluid">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3 font-weight-light">Pour nous contacter
    </h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a>
        </li>
        <li class="breadcrumb-item active">Contacts</li>
    </ol>

    <div class="alert alert-info col-md-12">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {% for message in app.session.flashbag.get('info') %}
            <p><i class="fa fa-info-circle"></i> {{ message }}</p>
        {% endfor %}
    </div>

    <!-- Content Row -->
    <div class="row">
        <!-- Map Column -->
        <div class="col-md-8">
            <!-- Embedded Google Map -->
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d31720.204320257435!2d-3.9007045818074677!3d6.39070595404914!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xfc152bb402e18eb%3A0x83265d34fea29607!2sAkoupe%2C+C%C3%B4te+d&#39;Ivoire!5e0!3m2!1sfr!2s!4v1499881248498" width="700" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
        <!-- Contact Details Column -->
        <div class="col-md-4">
            <h3>Voici nos coordonnées !</h3>
            <p>
                Akoupé, BP 159 Akoupé<br>
            </p>
            <p><i class="fa fa-phone"></i>
                <abbr title="Contacts">P</abbr>: {{ contact.telUn }}</p>
            <p><i class="fa fa-envelope-o"></i>
                <abbr title="E-mail">E</abbr>: <a href="mailto:{{ contact.eMailUn }}">{{ contact.eMailUn }}</a>
            </p>
            <p><i class="fa fa-clock-o"></i>
                <abbr title="Horaires">H</abbr>: {{ contact.heurUn }}</p>

            <a class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                <i class="fa fa-envelope-o"></i> Laissez-nous un message</a>


        </div>
    </div>
    <!-- /.row -->

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Envoyer un message</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    {{ form_start(form, {'attr':{'id': 'contactForm'}}) }}
                    {{ form_errors(form) }}

                    <div class="form-group">

                        {{ form_label(form.Nom, "Votre nom complet :") }}

                        <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </span>
                            {{ form_widget(form.Nom, {'attr':{'class': 'form-control', 'id': 'name'}}) }}
                        </div>
                    </div>

                    <div class="form-group">

                        {{ form_label(form.Tel, "Votre numéro de téléphone :") }}

                        <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-phone"></i>
                        </span>
                            {{ form_widget(form.Tel, {'attr':{'class': 'form-control', 'id': 'phone', 'type': 'tel'}}) }}
                        </div>
                    </div>

                    <div class="form-group">

                        {{ form_label(form.Email, "Votre e-mail :") }}

                        <div class="input-group">
                        <span class="input-group-addon">
                            @
                        </span>
                            {{ form_widget(form.Email, {'attr':{'class': 'form-control', 'id': 'email'}}) }}
                        </div>
                    </div>

                    <div class="form-group">

                        {{ form_label(form.Contenu, "Votre message :") }}

                        {{ form_widget(form.Contenu, {'attr':{'class': 'form-control', 'id': 'message'}}) }}
                    </div>

                    {{ form_rest(form) }}

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                    {{ form_end(form) }}
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
</div>

    {% block javascripts %}
        <!-- Contact Form JavaScript -->
        <!-- Do not edit these files! In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
        <script src="{{ asset('js/jqBootstrapValidation.js') }}"></script>
        <script src="{{ asset('js/contact_me.js') }}"></script>
    {% endblock %}

{% endblock %}
