    <body class="hold-transition login-page">
        <div class="login-box">
            <div class="login-logo">
                <a href="#"><b>AgriWeb</b> | Plateforme</a>
            </div>
            <!-- /.login-logo -->
            {% block body %}
                <div class="login-box-body">
                    <p class="login-box-msg">Veuillez-vous connecter !!</p>

                    <form action="{{ path('login') }}" method="post">
                        <div class="form-group has-feedback">
                            <input name="_username" type="text" class="form-control" placeholder="Matricule" autofocus />
                            <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input name="_password" type="password" class="form-control" placeholder="Mot de passe">
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                        <div class="row">
                            
                            <div class="col-xs-offset-3 col-xs-6">
                                <button type="submit" class="btn btn-primary btn-raised btn-block btn-flat">Connexion</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>

                </div>
                <!-- /.login-box-body -->
            {% endblock %}
        </div>
        <!-- /.login-box -->

        <!-- jQuery 2.2.3 -->
        <script src="/USCAEP/web/backend/v2/plugins/jQuery/jquery-2.2.3.min.js"></script>
