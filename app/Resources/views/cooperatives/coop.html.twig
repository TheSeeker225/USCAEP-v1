{% extends 'base.html.twig' %}

{% block title %}
    Nos coopératives
{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div class="container-fluid">

        <h1 class="mt-4 mb-3 font-weight-light">Les coopératives membres</h1>

        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a>
            </li>
            <li class="breadcrumb-item active">Coopératives</li>
        </ol>

        {% for cooperative in cooperatives %}
        <!-- Blog Post Row -->
            <div class="row">

                <div class="col-md-4">
                    <a href="{{ path('details_cooperative', {'coop': cooperative.sigleCoop}) }}">
                        <img class="img-fluid rounded mb-3 mb-md-0" src="/frontend/img/bg-500x300.png" alt="">
                    </a>
                </div>
                <div class="col-md-8">
                    <h3>
                        <a href="{{ path('details_cooperative', {'coop': cooperative.sigleCoop}) }}">
                            {{ cooperative.nomCoop }} ({{ cooperative.sigleCoop }})</a>
                    </h3>
                    <p>
                        <i class="fa fa-map-marker"></i> 
                        {{ cooperative.departement.nomDep }}, Sous-préfecture de {{ cooperative.sPCoop }}
                    </p>
                    <p>Date d'adhésion : {{ cooperative.dateAdhCoop|date('d/m/Y') }}</p>

                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
                    </p>
                    <a class="btn bg-blue" href="{{ path('details_cooperative', {'coop': cooperative.sigleCoop}) }}">Plus d'infos <i class="fa fa-angle-right"></i></a>
                </div>
            </div>
            <!-- /.row -->

            <hr>
        {% endfor %}

        <!-- Pagination -->
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Précédent</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Suivant</span>
                </a>
            </li>
        </ul>

    </div>
{% endblock %}
