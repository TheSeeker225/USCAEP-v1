{% extends 'CoreBundle::admin.html.twig' %}

{% block title %}
    Supprimer l'image
{% endblock %}

{% block stylesheet %}
    
{% endblock %} 


{% block body %}

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Suppression d'une image
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="{{ path('core_homepage') }}">
                    <i class="fa fa-dashboard"></i> Tableau de bord
                </a>
            </li>
            <li>
                <a href="{{ path('core_image') }}"><i class="fa fa-photo"></i> Images</a>
            </li>
                
            <li class="active">
                <i class="fa fa-trash"></i> Supprimer l'image
            </li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="callout callout-danger">
            <h4><i class="fa fa-trash"></i> Suppression de l'image</h4>

            <p>
                Cette opération est irréversible. Veuillez bien vérifier ces informations afin d'être vraiment sûr avant de cliquer sur 
                <a href="#" data-toggle="modal" data-target="#suppClt" class="alert-link">Supprimer</a> !
            </p>
        </div>

                <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">
                    <span class="glyphicon glyphicon-image"></span> Présentation de l'image
                </h3>
            </div>
            <div class="box-body">
                <div class="row">
                    <img class="col-sm-4" src="{{ image.webPath }}" alt="{{ image.altImg }}">

                    <div class="col-sm-8">

                        <p>Cette image est enregistrée dans le dossier {{ image.dirImg }}<p>
                        
                        {% if image.produit != null %}
                            Nom du produit : {{ image.produit.nomPrd|capitalize }}&nbsp;&nbsp;
                        {% endif %}
                        {% if image.cooperative != null %}
                            Coopérative : {{ image.cooperative.nomCoop|capitalize }}&nbsp;&nbsp;
                        {% endif %}
                        {% if image.onlImg != false %}
                            <button class="btn btn-success" title="Cette image est sur le site web" data-toggle="tooltip" data-placement="top">
                                <i class="fa fa-globe"></i></button>
                        {% endif %}

                        {% autoescape false %}
                            {{ image.descImg }}
                        {% endautoescape %}
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->

    </section>

    <!-- Modal -->
    <div class="modal fade" id="suppImg" tabindex="-1" role="dialog" aria-labelledby="suppUn" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="suppUn"> Demande de suppression</h4>
                </div>
                <div class="modal-body">
                    <form>
                            &Ecirc;tes-vous vraiment sûr de supprimer cette union ?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal"> Non</button>
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </div>
                        {{ form_rest(form) }}
                    </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->

    {% block javascripts %}
        <script>
           
        </script>
        <!-- Ckeditor -->
        <script src="/backend/vendor/ckeditor/ckeditor.js"></script>

    {% endblock %}
{% endblock %}