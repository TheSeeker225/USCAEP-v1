{% extends 'CoreBundle:Default:index.html.twig' %}

{% block meta %}
    <meta name="description" content="Présentation de la transactions" />
    <meta name="keywords" content="approvisionnement, commande" />
{% endblock %}

{% block title %}
  Commande
{% endblock %}

{% block stylesheet %}
    
{% endblock %}
{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Présentation de la transaction
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="{{ path('core_homepage') }}">
                    <i class="fa fa-desktop"></i> Tableau de bord
                </a>
            </li>
            <li>
                <a href="{{ path('core_transaction') }}">
                  <span class="glyphicon glyphicon-sort"></span> Transactions
                </a>
            </li>
            <li class="active">
                <i class="fa fa-qrcode"></i> Commande n°345
            </li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">
                    <i class="fa fa-qrcode"></i> Commande de {{ commande.client.nomClt }} du 
                </h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-cog"></i>
                    </button>
                    <ul class="dropdown-menu slidedown">
                        <li>
                            <a href="#" class="text-orange" data-toggle="modal" data-target=".bs-modTrans">
                                <i class="fa fa-edit fa-fw"></i> Modifier la transaction
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-red" data-toggle="modal" data-target=".bs-delTrans">
                                <i class="fa fa-trash fa-fw"></i> Supprimer la transaction
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-print fa-fw"></i> Imprimer
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="box-body">
                <!-- title row -->
                    <div class="row">
                      
                        <div class="col-sm-12">
                            <h4 class="page-header">
                                <img class="col-sm-3 pull-left" src="{{ image.webPath }}" alt="{{ image.altImg }}" />
                                <strong>{{ uscaep.nomUn|upper }}</strong>
                        
                                <address class="col-sm-offset-4">
                                    <span class="glyphicon glyphicon-map-marker"></span> {{ uscaep.siegeUn }}<br>
                                    <span class="glyphicon glyphicon-phone"></span> {{ uscaep.telUn }}<br>
                                    <span class="glyphicon glyphicon-envelope"></span> {{ uscaep.eMailUn }}<br>
                                    <span class="glyphicon glyphicon-dashboard"></span> {{ uscaep.heurUn }}<br>
                                </address>
                            </h4>
                        </div>
                      <!-- /.col -->
                    </div>
                    <!-- info row -->
                    <div class="row invoice-info">

                        <div class="col-sm-4 invoice-col">
                            <b>Bon de commande n° 
                            {% if commande.id < 10  %}00{% endif %}
                            {% if commande.id >= 10 and commande.id <= 99 %}0{% endif %}
                            {{ commande.id }}/2018/CMD</b><br>
                            Date: {{  }}
                        </div>
                        <!-- /.col -->
                      
                        <div class="col-sm-4 col-sm-offset-4 invoice-col">
                            De
                            <address>
                                <strong>{{ commande.client.nomClt }}</strong><br>
                                {{ commande.client.siegeClt }}<br>
                                Tel : {{ commande.client.telClt }}<br>
                                Email: {{ commande.client.emailClt }}
                            </address>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->

                    <!-- Table row -->
                    <div class="row">
                        <div class="col-xs-12 table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Qty</th>
                                        <th>Product</th>
                                        <th>Serial #</th>
                                        <th>Description</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>Call of Duty</td>
                                        <td>455-981-221</td>
                                        <td>El snort testosterone trophy driving gloves handsome</td>
                                        <td>$64.50</td>
                                    </tr>
                                    <tr>
                                        <td>1</td>
                                        <td>Need for Speed IV</td>
                                        <td>247-925-726</td>
                                        <td>Wes Anderson umami biodiesel</td>
                                        <td>$50.00</td>
                                    </tr>
                                    <tr>
                                        <td>1</td>
                                        <td>Monsters DVD</td>
                                        <td>735-845-642</td>
                                        <td>Terry Richardson helvetica tousled street art master</td>
                                        <td>$10.70</td>
                                    </tr>
                                    <tr>
                                        <td>1</td>
                                        <td>Grown Ups Blue Ray</td>
                                        <td>422-568-642</td>
                                        <td>Tousled lomo letterpress</td>
                                        <td>$25.99</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->

                    <div class="row">
                        <!-- accepted payments column -->
                        <div class="col-xs-6">
                            <p class="lead">Méthodes de paiement:</p>

                            <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                                Les négociations ont lieu entre le directeur commercial de l'USCAEP et le représentant du client 
                            </p>
                        </div>
                        <!-- /.col -->
                        <div class="col-xs-6">
                            <p class="lead">Paiement éffectué depuis le 22/2/2014</p>

                            <div class="table-responsive">
                                <table class="table">
                                    <tr>
                                        <th style="width:50%">Montant HT:</th>
                                        <td>$250.30</td>
                                    </tr>
                                    <tr>
                                        <th>TVA :</th>
                                        <td>$10.34</td>
                                    </tr>
                                    <tr>
                                        <th>Transport:</th>
                                        <td>$5.80</td>
                                    </tr>
                                    <tr>
                                        <th>Total TTC:</th>
                                        <td>$265.24</td>
                                    </tr>
                                </table>
                            </div>
                      </div>
                      <!-- /.col -->
                  </div>
                  <!-- /.row -->
              </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->

    <!-- Modal d'ajout d'un produit -->
    <div class="modal fade bs-modTrans modal-warning">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">
                        <i class="fa fa-cube"></i> Modifier la transaction
                    </h4>
                </div>
                <div class="modal-body">
                    <p>One fine body&hellip;</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-outline">Valider</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /. Modal d'ajout de région -->

    <!-- Modal d'ajout d'un produit -->
    <div class="modal fade bs-delTrans modal-danger">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">
                        <span class="glyphicon glyphicon-question-sign"></span> Supprimer la transaction
                    </h4>
                </div>
                <div class="modal-body">
                    <p>One fine body&hellip;</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-outline">Valider</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /. Modal d'ajout de région -->
{% endblock %}

