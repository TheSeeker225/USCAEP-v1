{% extends 'CoreBundle:Default:index.html.twig' %}


{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <i class="ion ion-android-people"></i>
            Clients de l'USCAEP
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('core_homepage') }}"><i class="fa fa-home"></i> Tableau de bord</a></li>
            <li class="active"><a href="#"><i class="fa fa-users"></i> Clients</a></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="callout callout-info">
            <h4>Information !</h4>

            {% for message in app.session.flashbag.get('info') %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>

        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">

                <h3 class="box-title">
                    <i class="ion ion-android-person"></i>
                    {% if key == 'supprimer' %}
                        Supprimer une image
                    {% else %}
                        Modifier un image
                    {% endif %}
                </h3>

            </div>
            <div class="box-body">

                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                    {{ form_errors(form) }}

                        <div class="form-group col-md-6">

                            {{ form_label(form.nomClt, " ") }}

                            <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-building"></i>
                            </span>
                                {{ form_widget(form.nomClt, {'attr':{'class': 'form-control', 'id': 'email'}}) }}
                            </div>
                        </div>

                        <div class="form-group col-md-6">

                            {{ form_label(form.raisSocClt, " ") }}

                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-list"></i>
                                </span>
                                {{ form_widget(form.raisSocClt, {'attr':{'class': 'form-control select2'}}) }}
                            </div>
                        </div>

                        <div class="form-group col-md-6">

                            {{ form_label(form.siegeClt, " ") }}

                            <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-map-marker"></i>
                            </span>
                                {{ form_widget(form.siegeClt, {'attr':{'class': 'form-control', 'id': 'phone'}}) }}
                            </div>
                        </div>

                        <div class="form-group col-md-6">

                            {{ form_label(form.telClt, " ") }}

                            <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-phone"></i>
                            </span>
                                {{ form_widget(form.telClt, {'attr':{'class': 'form-control', 'id': 'phone'}}) }}
                            </div>
                        </div>

                        <div class="form-group col-md-6">

                            {{ form_label(form.emailClt, " ") }}

                            <div class="input-group">
                            <span class="input-group-addon">
                                @
                            </span>
                                {{ form_widget(form.emailClt, {'attr':{'class': 'form-control', 'id': 'email'}}) }}
                            </div>
                        </div>

                    {{ form_rest(form) }}

            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <input type="reset" title="Afficher" href="#" data-toggle="tooltip" data-widget="chat-pane-toggle" data-original-title="Afficher" value="Annuler" />
                <input type="submit" value="Modifier" />

            {{ form_end(form) }}
            </div>
        </div>
        <!-- /.box -->

    </section>
    <!-- /.content -->
{% endblock %}

