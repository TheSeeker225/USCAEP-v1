{% extends 'CoreBundle:Default:cooperative/login.html.twig' %}

{% block body %}
<div class="login-box">
  <div class="login-logo">
    <a href="{{ path('core_login') }}"><b>AgriWeb</b> | Plateforme</a>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg"> Veuillez-vous connecter ! </p>

    <form method="post">
      <div class="form-group has-feedback">
        <input type="email" class="form-control" placeholder="Saisir le matricule">
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" class="form-control" placeholder="Saisir le mot de passe">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <button class="btn btn-block bg-orange btn-flat" type="submit">
        Connexion
        <div class="ripple-container"></div>
      </button>


    </form>

  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
{% endblock %}
