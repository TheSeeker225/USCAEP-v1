{% extends 'CoreBundle::about.html.twig' %}

{% block stylesheet %}
  <!-- DataTables -->
  <link rel="stylesheet" href="{{ asset('bundles/backend/plugins/datatables/dataTables.bootstrap.css') }}">
{% endblock %}

{% block body %}
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Employés des coopératives
      <small>Liste des employés par coopératives</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="{{ path('core_homepage') }}"><i class="fa fa-desktop"></i>Tableau de bord</a></li>
      <li class="active"><a href="#"><i class="fa fa-group"></i> Employés</a></li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">

    <!-- Default box -->
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title"><i class="ion ion-android-people"></i> Présentation des employés</h3>

        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fa fa-times"></i></button>
        </div>
      </div>
      <div class="box-body">


        <a type="#" data-toggle="modal" data-target=".bs-addEmp" class="btn btn-primary btn-sm pull-right"><i class="ion ion-person-add"></i> Nouvel employé</a>

        <h4>Liste des employés</h4>
        <table id="dataTable-emp" class="table table-bordered table-striped">
          <thead>
          <tr>
            <th>ID</th>
            <th style="width: 50px;">Photo</th>
            <th>Nom complet</th>
            <th>Naissance</th>
            <th>Coopérative</th>
            <th>Poste</th>
            <th>Résidence</th>
            <th>Contacts</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td>1.</td>
            <td><img src="/img/64x64/cacao-64x64.png" alt="Cacao"></td>
            <td>Noel NANGO Koua</td>
            <td>01/02/1078</td>
            <td>IROKO</td>
            <td>Président</td>
            <td>Tiémélékro</td>
            <td>01060789</td>
            <td style="width: 160px;">
              <a href="#" class="btn bg-yellow"><i class="fa fa-pencil"></i></a>
              <a href="#" class="btn bg-red"><i class="fa fa-trash"></i></a>
            </td>
          </tr>
          </tbody>
        </table>

      </div>
      <!-- /.box-body -->
      <div class="box-footer">
        <button type="button" class="btn bg-orange pull-right"><span class="glyphicon glyphicon-print"></span> Imprimer</button>
      </div>
      <!-- /.box-footer-->
    </div>
    <!-- /.box -->

  </section>
  <!-- /.content -->


  <!-- Modal d'ajout de région -->
  <div class="modal fade bs-addEmp example-modal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">
            <i class="ion ion-android-person"></i> Nouveau produit
          </h4>
        </div>
        <div class="modal-body">
          <p>One fine body&hellip;</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Annuler</button>
          <button type="button" class="btn btn-primary">Enregistrer</button>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>
  <!-- /. Modal d'ajout de région -->
{% endblock %}

    {% block javascripts %}
      <!-- DataTables -->
      <script src="{{ asset('bundles/backend/plugins/datatables/jquery.dataTables.min.js') }}"></script>
      <script src="{{ asset('bundles/backend/plugins/datatables/dataTables.bootstrap.min.js') }}"></script>
      <!-- jQuery UI 1.11.4 -->
      <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
      <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
      <script>
          $.widget.bridge('uibutton', $.ui.button);
      </script>

      <!-- Page-Level Demo Scripts - Tables - Use for reference -->
      <script>
          $( function() {
              $('#dataTable-emp').DataTable( {
                  "language": {
                      "info": "Affichage _START_ à _END_ parmi les _TOTAL_ éléménts",
                      "infoEmpty": "Aucun achat trouvé !",
                      "infoFiltered": "(Résultat parmi _MAX_ éléments) ",
                      "loadingRecords": "Veuillez patienter quelques instants !",
                      "lengthMenu": 'Afficher <select class="form-control">'+
                      '<option value="10">10</option>'+
                      '<option value="20">20</option>'+
                      '<option value="30">30</option>'+
                      '<option value="40">40</option>'+
                      '<option value="50">50</option>'+
                      '<option value="-1">Tous</option>'+
                      '</select> éléments',
                      "emptyTable": "Aucun achat n'a été enregistré !",
                      "zeroRecords": "Aucun résultat trouvé !",
                      "search": "Rechercher :",
                      "paginate": {
                          "previous": "Précédant",
                          "next": "Suivant",
                          "first": "Premier page",
                          "last": "Dernière page"
                      }
                  }
              } );
          } );

      </script>
    {% endblock %}
